#include <iostream>
int main() {
    const int maxRows = 100;  
    const int maxCols = 100;  
    int matrix1[maxRows][maxCols], matrix2[maxRows][maxCols], sum[maxRows][maxCols];
    int rows, cols;
    std::cout << "Enter the number of rows: ";
    std::cin >> rows;
    std::cout << "Enter the number of columns: ";
    std::cin >> cols;
    std::cout << "Enter elements of the first matrix:" << std::endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << "Element (" << i + 1 << ", " << j + 1 << "): ";
            std::cin >> matrix1[i][j];
        }
    }
    std::cout << "Enter elements of the second matrix:" << std::endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << "Element (" << i + 1 << ", " << j + 1 << "): ";
            std::cin >> matrix2[i][j];
        }
    }
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            sum[i][j] = matrix1[i][j] + matrix2[i][j];
        }
    }
    std::cout << "Sum of the matrices:" << std::endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << sum[i][j] << " ";
        }
        std::cout << std::endl;
    }
    return 0;
}
