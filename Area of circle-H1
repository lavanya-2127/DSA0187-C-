#include <iostream>

int main() {
    const double pi = 3.14159;
    double radius, area;
    std::cout << "Enter the radius of the circle: ";
    std::cin >> radius;
    area = pi * radius * radius;
    std::cout << "The area of the circle with radius " << radius << " is: " << area << std::endl;
    return 0;
}
